//#use rs232(baud=9600,parity=N,xmit=pin_G0,rcv=pin_G1,bits=8,stream=DC) //MAIN to DCM

#use spi(MASTER, CLK=PIN_E1, DI=PIN_F7, DO=PIN_E0,  BAUD=800000, BITS=8, STREAM=MAIN_FM, MODE=0) //MAIN flash memory port
#use spi(MASTER, CLK=PIN_B2, DI=PIN_B5, DO=PIN_B4,  BAUD=800000, BITS=8, STREAM=COM_FM, MODE=0) //COM flash memory port
#use spi(MASTER, CLK=PIN_A3, DI=PIN_A0, DO=PIN_A1,  BAUD=800000, BITS=8, STREAM=MISSION_FM, MODE=0) //MISSION flash memory port
//-------------PWM Settings----------------------------------------------------

